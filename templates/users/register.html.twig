{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="card text-center col-6 p-1">
        <div class="card p-2">
            <div class="card-header">
                <h1 class="h3 mb-3 font-weight-normal">Register</h1>
            </div>
            <div class="card-body">
                {{ form_row(form.username,{attr:{'class':'form-control'}}) }}
                <label for="inputPassword" class="mt-2">Password</label>
                {{ form_widget(form.password,{attr:{'class':'form-control mb-2'}}) }}
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}">
                <button class="btn btn-lg btn-primary mt-2" type="submit">
                    Register
                </button>
                <a href="{{ path('login') }}" class="btn btn-lg btn-success mt-2" type="submit">
                    Login
                </a>
            </div>
        </div>
    </div>
{% endblock %}